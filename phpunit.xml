<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="tests/bootstrap.php" colors="true" verbose="true">
    <testsuites>
        <testsuite name="Router Tests">
            <directory>./tests</directory>
        </testsuite>
    </testsuites>

    <php>
        <const name="PHPUNIT_RUNNING" value="true"/>
    </php>

    <logging> 
        <log type="junit" target="test-results.xml"/> 
        <log type="coverage-html" target="coverage-report/"/>
    </logging>
</phpunit>
